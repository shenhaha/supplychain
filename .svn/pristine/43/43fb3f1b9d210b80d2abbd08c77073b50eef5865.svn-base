                    <option value="从未如此">从未如此</option>
                    <option value="偶尔如此">偶尔如此</option>
                    <option value="时常如此">时常如此</option>
                    <option value="总是如此">总是如此</option>
                </select>
            </div>
        </div>
        <div class="form-group">
