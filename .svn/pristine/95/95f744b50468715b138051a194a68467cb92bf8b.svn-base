<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id">
        </div>
    </div>
    <div class="container">
        <div class="row">
            <!--前缀-->
            <div class="form-group col-md-5">
                <label for="motherName" class="col-sm-4 control-label">宝妈姓名：</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="motherName" name="motherName">

                    </select>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="roomStyle" class="col-sm-4 control-label">房间类型：</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="roomStyle" name="roomStyle" onchange="change($(this))">

                    </select>

                </div>
            </div>

        </div>
        <div class="row">

            <div class="form-group col-md-5 col-lg-offset-1">
                <label for="beginTime" class="col-md-4 control-label">开始时间：</label>
                <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-md-6 "
                     data-date="" data-date-format="yyyy-mm-dd hh:ii:ss">

                    <input class="form-control" size="16" type="text" value="" name="beginTime" id="beginTime"
                           readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="roomNum" class="col-sm-4 control-label">房间号：</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="roomNum" name="roomNum">

                    </select>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="form-group col-md-5 col-lg-offset-1">
                <label for="endTime" class="col-md-4 control-label">结束时间：</label>
                <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-md-6 "
                     data-date="" data-date-format="yyyy-mm-dd hh:ii:ss">

                    <input class="form-control" size="16" type="text" value="" name="endTime" id="endTime"
                           readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
            </div>
        </div>

    </div>
</form>
<script>

    $(function () {
        $.get("${ctx}/customerBasic/getTwoTypeCustomerBasics?storeId="+'<%=session.getAttribute("storeId")%>').done(function(data){
            for(var i=0;i<data.length;i++){
                $("#motherName").append("<option value='"+data[i].id+"'>"+data[i].name+"</option>");
            }

        });
       $.get("${ctx}/roomStyles/getRoomStylesList?storeId="+'<%=session.getAttribute("storeId")%>').done(function(data){
            for(var i=0;i<data.length;i++){
                $("#roomStyle").append("<option value='"+data[i].id+"'>"+data[i].roomStyle+"</option>");
            }
           $.get("${ctx}/room/selectByRoomStyleId?roomStylesId="+data[0].id).done(function(data) {
               for (var i = 0; i < data.length; i++) {
                   $("#roomNum").append("<option value='" + data[i].id + "'>" + data[i].classify + data[i].num + "</option>");
               }

           });
        });
    });

    function change(roomType) {

        $("#roomNum option").remove();
        $.get("${ctx}/room/selectByRoomStyleId?roomStylesId="+roomType.val()).done(function(data) {
            for (var i = 0; i < data.length; i++) {
                $("#roomNum").append("<option value='" + data[i].id + "'>" + data[i].classify + data[i].num + "</option>");
            }

        });

    }

    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });

</script>
</body>
</html>
