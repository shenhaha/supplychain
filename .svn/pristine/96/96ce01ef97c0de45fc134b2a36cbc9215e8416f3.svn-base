<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
    <title>客诉管理</title>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-1 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id" placeholder="id" >
        </div>
    </div>
    <div class="container">
            <div class="form-group">
                <label for="employer_id" class="col-sm-1 control-label">被投诉人</label>
                <div class="col-sm-7">
                    <select  type="text" class="form-control" id="employer_id" name="employer_id" tabindex="1">
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="reporter" class="col-sm-1 control-label">投诉人</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="reporter" name="reporter" placeholder="投诉人">
                </div>
            </div>
            <div class="form-group">
                <label for="customerReback" cols="30" class="col-sm-1 control-label">客户反馈</label>
                <div class="col-sm-7">
                    <textarea type="text" class="form-control"id="customerReback" name="customerReback" placeholder="客户反馈" ></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="cause" class="col-sm-1 control-label">事件原因</label>
                <div class="col-sm-7">
                    <textarea type="text" cols="30" class="form-control" id="cause" name="cause" placeholder="事件原因" ></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="solution" cols="30" class="col-sm-1 control-label">解决方案</label>
                <div class="col-sm-7">
                    <textarea type="text" class="form-control"id="solution" name="solution" placeholder="解决方案" ></textarea>
                </div>
            </div>
            <div class="form-group ">
                <label for="leaderidea" cols="30" class="col-sm-1 control-label">领导处理意见</label>
                <div class="col-sm-7">
                    <textarea type="text" class="form-control"id="leaderidea" name="leaderidea" placeholder="领导处理意见" ></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="result" cols="30" class="col-sm-1 control-label">处理结果</label>
                <div class="col-sm-7">
                    <textarea type="text" class="form-control"id="result" name="result" placeholder="处理结果" ></textarea>
                </div>
            </div>
    </div>
</form>
</body>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>
</html>
