<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${ctx}/static/template/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <title>Title</title>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id" placeholder="id" >
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="form-group col-md-5">
                <label for="source" class="col-sm-5 control-label">来自哪位会员妈妈：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="source" name="source" placeholder="来自哪位会员妈妈">
                </div>
            </div>

            <div class="form-group col-md-5">
                <label for="howMouch" class="col-sm-5 control-label">额度多少：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="howMouch" name="howMouch" placeholder="额度多少">
                </div>
            </div>

        </div>

        <div class="row">
            <div class="form-group col-md-5">
                <label for="customerBasicId" class="col-sm-5 control-label">产妇姓名：</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="customerBasicId" name="customerBasicId" placeholder="customerBasicId"></select>
                </div>
            </div>
        </div>
    </div>
</form>
<script>

    $(function(){

        $.ajax({
            url: "${ctx}/customerBasic/selectByStoreId",
            type: "post",
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    $("#customerBasicId").append("<option  value='" + data[i].id + "'>" + data[i].name + "</option>");
                }
            }
        });
    });
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>
</body>
</html>

