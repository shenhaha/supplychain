<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${ctx}/static/template/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id" placeholder="id" >
        </div>
    </div>
    <div class="container">
        <div class="form-group">
            <label for="answerone" class="col-sm-3 control-label">当我有麻烦和烦恼时我可以从家庭得到满意的帮助:</label>
            <div class="col-sm-5">
                <select  type="text" class="form-control" id="answerone" name="answerone" placeholder="当我有麻烦和烦恼时我可以从家庭得到满意的帮助" tabindex="1">
                    <option value="几乎很少">几乎很少</option>
                    <option value="有时">有时</option>
                    <option value="经常">经常</option>
                </select>
            </div>
        </div>

        <div class="form-group ">
            <label for="answertwo" class="col-sm-3 control-label">我很满意家人和我讨论事情及分担问题的方式 :</label>
            <div class="col-sm-5">
                <select  type="text" class="form-control" id="answertwo" name="answertwo" placeholder="我很满意家人和我讨论事情及分担问题的方式" tabindex="1">
                    <option value="几乎很少">几乎很少</option>
                    <option value="有时">有时</option>
                    <option value="经常">经常</option>
                </select>
            </div>
        </div>
        <div class="form-group ">
            <label for="answerthree" class="col-sm-3 control-label">当我想做一件新事情时，家人都会给我满意的接受和支持 :</label>
            <div class="col-sm-5">
                <select  type="text" class="form-control" id="answerthree" name="answerthree" placeholder="当我想做一件新事情时，家人都会给我满意的接受和支持" tabindex="1">
                    <option value="几乎很少">几乎很少</option>
                    <option value="有时">有时</option>
                    <option value="经常">经常</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="answerfour" class="col-sm-3 control-label">我很满意家人对我的情绪表示关心和爱护的方式 :</label>
            <div class="col-sm-5">
                <select  type="text" class="form-control" id="answerfour" name="answerfour" placeholder="我很满意家人对我的情绪表示关心和爱护的方式" tabindex="1">
                    <option value="几乎很少">几乎很少</option>
                    <option value="有时">有时</option>
                    <option value="经常">经常</option>
                </select>
            </div>
        </div>
        <div class="form-group ">
            <label for="answerfive" class="col-sm-3 control-label">我无缘无故的感到害怕和惊慌 :</label>
            <div class="col-sm-5">
                <select  type="text" class="form-control" id="answerfive" name="answerfive" placeholder="我无缘无故的感到害怕和惊慌" tabindex="1">
                    <option value="几乎很少">几乎很少</option>
                    <option value="有时">有时</option>
                    <option value="经常">经常</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="note" class="col-sm-3 control-label">备注:</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" id="note">
            </div>
        </div>
    </div>
</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>
</body>
</html>

