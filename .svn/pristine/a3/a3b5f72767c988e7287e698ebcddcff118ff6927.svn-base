<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${ctx}/static/template/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id" placeholder="id" >
        </div>
    </div>
  <div class="container">
      <div class="row" >
           <%-- <!--前缀-->
            <div class="form-group col-md-5">
                <label for="mothername"  class="col-sm-4 control-label">妈妈姓名</label>
                <div class="col-sm-6">
                    <select type="text" class="form-control" id="mothername" name="mothername" placeholder="妈妈姓名">
                    </select>
                </div>
            </div>--%>
           <div class="form-group col-md-5">
               <label for="services"  class="col-sm-4 control-label">加值服务</label>
               <div class="col-sm-7">
                   <select id="services" class="form-control" name="serviceid">
                   </select>
               </div>
           </div>
            <div class="form-group col-md-5">
                <label for="time"  class="col-sm-4 control-label">次数</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="time" name="time" placeholder="次数">
                </div>
            </div>
       </div>
      <div class="row" >
          <div class="form-group col-md-5">
              <div class="col-sm-7 col-sm-offset-4" id="msg">
              </div>
          </div>
      </div>
   </div>
</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
    $(function () {
        //动态查询妈妈信息
        $.ajax({
            url:"${ctx}/customerBasic/selectCustomerBasicByStoreId?type=0&storeId="+'<%=session.getAttribute("storeId")%>',
            type:"post",
            success:function(data){
                for(var i=0;i<data.length;i++){
                    $("#mothername").append("<option value='"+data[i].name+"'>"+data[i].name+"</option>");
                }
            }
        });

    });
</script>
</body>
</html>

