@Controller
@RequestMapping("/babynursing")
public class BabyNursingController {
    @Autowired
    private BabyNursingService babyNursingService;

   //根据妈妈ID获取信息
    @RequestMapping("/getBabyNursingRecord")
    @ResponseBody
    public List<Babynursingrecorddetail> getBabyNursingRecord(@NonNull String motherId) {

        return  babyNursingService.getBabyNursingRecord(motherId);
    }

    @RequestMapping("/addnuringdetail")
    @ResponseBody
    public ResultSet addBabyNursingRecord(@NonNull Babynursingrecorddetail babynursingrecorddetail) {
        babyNursingService.insert(babynursingrecorddetail);
        return ResultSet.getSuccess();
    }
    @RequestMapping("/updateBabyNursingRecord")
    @ResponseBody
    public ResultSet updateBabyNursingRecord(@NonNull Babynursingrecorddetail babynursingrecorddetail) {
        babyNursingService.updateBabyNursingRecord(babynursingrecorddetail);
        return ResultSet.getSuccess();
    }

    @RequestMapping("/deleteBabyNursingRecord")
    @ResponseBody
    public ResultSet deleteBabyNursingRecord(@NonNull String id) {
        babyNursingService.deleteByPrimaryKeyDetail(id);
        return  ResultSet.getSuccess();
    }

    @RequestMapping("/selectBabyNursingRecord")
    @ResponseBody
    public List<Babynursingrecorddetail> selectBabyNursingRecord(@NonNull String storeId) {

        return  babyNursingService.selectBabyNursingRecord(storeId);
    }
    @RequestMapping("/selectOneBabyNursingRecord")
    @ResponseBody
    public Babynursingrecorddetail selectOneBabyNursingRecord(@NonNull String storeId) {

        return  babyNursingService.selectOneBabyNursingRecord(storeId);
    }


}
