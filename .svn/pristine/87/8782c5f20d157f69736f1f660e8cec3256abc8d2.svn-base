<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<html>
<head>
    <title>供应商管理</title>
</head>
<body>
<input style="display: none" type="hidden" id="storeId" value="${storeId}">
<!-- Main Content -->
<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Row -->
        <div class="row">
            <div class="col-sm-12">
                <%--<div class="panel-heading">
                    <div class="pull-left">
                        <ol class="breadcrumb">
                            <li><a href="${ctx}/index">首页</a></li>
                            <li class="active">供应商管理</li>
                        </ol>

                    </div>
                    <div class="clearfix"></div>
                </div>--%>
                <div>
                    <div class="panel-body">
                        <div class="table-wrap">

                            <table id="supplierLists" class="table" data-paging="true" data-filtering="true"
                                   data-sorting="true">

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Row -->

    </div>
</div>

<script>
    $(function () {
        var supplierTitle = [
            {
                "name": "id",
                "title": "ID",
                "breakpoints": "xs sm",
                "visible": false
            },
            {"name": "supplierNum", "title": "供应商编号", "visible": false},
            {"name": "supplierName", "title": "供应商名称"},
            {"name": "brand", "title": "品牌"},
            {"name": "nature", "title": "类型"},
            {"name": "address", "title": "地址"},
            {"name": "leadName", "title": "联系人"},
            {"name": "tell", "title": "联系电话"},
            {"name": "remark", "title": "备注"},
            {"name": "storeId", "title": "门店id", "visible": false},
            {"name": "addgoods", "title": "对应商品"}
        ];

        //启动模态框
        var $modal = $('#app-editor-modal'),
            $editor = $('#editor'),
            $editorTitle = $('#editor-title')
        //启动footable
        var ft = FooTable.init('#supplierLists', {
            "columns": supplierTitle,
            "rows": $.get("${ctx}/supplier/selectSupplier", function (data) {
                $(data).each(function () {
                    this.addgoods = "<button id='cx' class='btn btn-primary btn-sm'  onclick='findDetails(" + '"' + this.id + '"' + ',' + '"' + this.type + '"' + ")'>点击查看</button>";

                });
                //
                return data;
            }),
            //功能操作
            editing: {
                enabled: true,
                addRow: function () {
                    //新增模态框
                    var $that = $(this);
                    var dialog = BootstrapDialog.show({
                        type: BootstrapDialog.TYPE_DEFAULT,
                        title: "<span style=\"color:#ab8ce4\">新增一条数据</span>",
                        closable: false,
                        draggable: true,
                        cssClass: 'api-blacklist-form-add',
                        message: $('<div></div>').load('${ctx}/template/storesandsales/supplierlist.jsp'),//加载弹出页面
                        size: BootstrapDialog.SIZE_WIDE,//弹出框大小。
                        onhide: function () {
                            $that.removeAttr("disabled");
                        },
                        buttons: [{
                            id: 'btn-form-submit',
                            label: '提交',
                            icon: 'fa fa-check-circle',
                            cssClass: 'btn-primary',
                            action: function () {
                                var json = {

                                    'supplierName': $('#supplierName').val(),
                                    'brand': $('#brand').val(),
                                    'nature': $('#nature').val(),
                                    'address': $('#address').val(),
                                    'tell': $('#tell').val(),
                                    'storeId': $('#storeId').val(),
                                    'leadName': $('#leadName').val(),
                                    'remark': $('#remark').val()
                                };

                                $("#myform").bootstrapValidator({
                                    live: 'disabled',//验证时机，enabled是内容有变化就验证（默认），disabled和submitted是提交再验证
                                    excluded: [':disabled', ':hidden', ':not(:visible)'],//排除无需验证的控件，比如被禁用的或者被隐藏的
                                    submitButtons: '#btn-test',//指定提交按钮，如果验证失败则变成disabled，但我没试成功，反而加了这句话非submit按钮也会提交到action指定页面
                                    message: '通用的验证失败消息',//好像从来没出现过
                                    feedbackIcons: {//根据验证结果显示的各种图标
                                        valid: 'glyphicon glyphicon-ok',
                                        invalid: 'glyphicon glyphicon-remove',
                                        validating: 'glyphicon glyphicon-refresh'
                                    },
                                    fields: {
                                        supplierName: {
                                            validators: {
                                                notEmpty: {
                                                    message: '供应商名称不能为空'
                                                },
                                            }

                                        },
                                        brand: {
                                            validators: {
                                                notEmpty: {
                                                    message: '品牌不能为空'
                                                },
                                            }

                                        },
                                        adress: {
                                            validators: {
                                                notEmpty: {
                                                    message: '地址不能为空'
                                                },
                                            }

                                        },
                                        tell: {
                                            validators: {
                                                notEmpty: {
                                                    message: '联系电话不能为空'
                                                },
                                                regexp: {
                                                    regexp: /^1(3|4|5|7|8)\d{9}$/,
                                                    message: '手机号格式不正确！'
                                                },
                                            }

                                        },
                                        nature: {
                                            validators: {
                                                notEmpty: {
                                                    message: '类型不能为空！'
                                                },
                                            }
                                        }
                                    }
                                });
                                var bootstrapValidator = $("#myform").data('bootstrapValidator');
                                bootstrapValidator.validate();
                                if (bootstrapValidator.isValid()) {

                                    $.post("${ctx}/supplier/saveSupplier", json).done(function (data) {
                                        getCode(data)
                                    }).fail(function (data) {
                                        getCode(data)
                                    });
                                }
                            }
                        }, {
                            label: '关闭',
                            icon: 'fa fa-close',
                            action: function (dialogItself) {
                                dialogItself.close();
                            }
                        }]
                    });
                },
                //这里是修改时绑定数据
                editRow: function (row) {
                    var values = row.val();
                    var $that = $(this);
                    //失效
                    $that.attr("disabled", "disabled");
                    // 调用add方法
                    var dialog = BootstrapDialog.show({
                        type: BootstrapDialog.TYPE_DEFAULT,
                        title: "<span style=\"color:#ab8ce4\">修改一条数据</span>",
                        closable: false,
                        draggable: true,
                        cssClass: 'api-blacklist-form-add',
                        message: $('<div></div>').load('${ctx}/template/storesandsales/supplierlist.jsp'),//加载弹出页面
                        size: BootstrapDialog.SIZE_WIDE,//弹出框大小。
                        //数据回显
                        onshown: function (dialogRef) {
                            $('#id').val(values.id);
                            $('#supplierName').val(values.supplierName);
                            $('#brand').val(values.brand);
                            $('#nature').val(values.nature);
                            $('#leadName').val(values.leadName);
                            $('#address').val(values.address);
                            $('#tell').val(values.tell);
                            $('#storeId').val(values.storeId);
                            $('#remark').val(values.remark);
                        },
                        buttons: [{
                            id: 'btn-form-submit',
                            label: '提交',
                            icon: 'fa fa-check-circle',
                            cssClass: 'btn-primary',
                            action: function () {
                                var json = {
                                    'id': $('#id').val(),
                                    'supplierName': $('#supplierName').val(),
                                    'brand': $('#brand').val(),
                                    'nature': $('#nature').val(),
                                    'leadName': $('#leadName').val(),
                                    'address': $('#address').val(),
                                    'tell': $('#tell').val(),
                                    'storeId': $('#storeId').val(),
                                    'remark': $('#remark').val()
                                };
                                $.post("${ctx}/supplier/updateSupplier", json).done(function (data) {
                                    getCode(data)
                                }).fail(function (data) {
                                    getCode(data)
                                });
                            }
                        }, {
                            label: '关闭',
                            icon: 'fa fa-close',
                            action: function (dialogItself) {
                                dialogItself.close();
                            }
                        }]
                    });
                },
                //删除操作
                deleteRow: function (row) {
                    myConfirm("${ctx}/supplier/deleteSupplierById", row);
                }
            }
        });
        uid = 10;
    });

    //查询供应商对应的商品详情
    function findDetails(id, type) {


        //如果是总部的供应商
        if (type == "1") {

            window.location.href = "${ctx}/goods/selectHeadGoodsDetailsBySupplierId?supplierId=" + id;
        } else {
        //如果是门店的供应商
            window.location.href = "${ctx}/goods/selectStoreGoodsDetailsBySupplierId?supplierId=" + id;
        }


    }

</script>
</body>
</html>
