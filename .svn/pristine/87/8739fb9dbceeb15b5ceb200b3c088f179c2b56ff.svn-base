package com.luer.servicecenter.controller;

import com.luer.comm.utils.ResultSet;
import com.luer.servicecenter.bean.DoctorCheckout;
import com.luer.servicecenter.service.DoctorCheckoutService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import java.util.List;

/**
 * Created by 87961 on 2018/10/16.
 */
@Controller
@RequestMapping("/doctorCheckout")
public class DoctorCheckoutController {

    @Autowired
    private DoctorCheckoutService doctorCheckoutService;

    @RequestMapping("/addDoctorCheckout")
    @ResponseBody
    public ResultSet addDoctorCheckout(DoctorCheckout doctorCheckout){
        doctorCheckoutService.addDoctorCheckout(doctorCheckout);
        return ResultSet.getSuccess();
    }
    @RequestMapping("/updateDoctorCheckout")
    @ResponseBody
    public ResultSet updateDoctorCheckout(DoctorCheckout doctorCheckout){
        doctorCheckoutService.updateDoctorCheckout(doctorCheckout);
        return ResultSet.getSuccess();
    }
    @RequestMapping("/deleteDoctorCheckout")
    @ResponseBody
    public ResultSet deleteDoctorCheckout(String id){
        doctorCheckoutService.deleteDoctorCheckout(id);
        return ResultSet.getSuccess();
    }
    @RequestMapping("/getDoctorCheckout")
    @ResponseBody
    public List<DoctorCheckout> getDoctorCheckout(String motherId){
        List<DoctorCheckout> doctorCheckouts=doctorCheckoutService.getDoctorCheckout(motherId);
        return doctorCheckouts;
    }
}
