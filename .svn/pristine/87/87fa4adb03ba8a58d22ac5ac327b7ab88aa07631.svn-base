@RequestMapping("/businessmanager")
@Controller
public class SendCarController {

    @Autowired
    private SendCarService sendCarService;

    @ResponseBody
    @RequestMapping("/addSendCar")
    public ResultSet addSendCar(SendCar sendCar){
        sendCarService.insert(sendCar);
        return ResultSet.getSuccess();

    }

    @ResponseBody
    @RequestMapping("selectSendCarList")
    public List<SendCar> selectAllList(){
        List<SendCar> sendCars = sendCarService.selectAllLIst();
        return sendCars;
    }

    @ResponseBody
    @RequestMapping("getAllList")
    public List<SendCar> getAllList(String storeId){
        List<SendCar> sendCars = sendCarService.getAllList(storeId);
        return sendCars;
    }

    @ResponseBody
    @RequestMapping("updateSendCar")
    public ResultSet updateSendCar(SendCar sendCar){
      sendCarService.updateSendCar(sendCar);
        return ResultSet.getSuccess();
    }


    @ResponseBody
    @RequestMapping("deleteSendCar")
    public ResultSet deleteSendCar(String id){
        sendCarService.deleteSendCar(id);
        return ResultSet.getSuccess();
    }

}
