<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${ctx}/static/template/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id" placeholder="id" >
        </div>
    </div>
    <div class="container">
        <div class="row">
            <!--前缀-->
            <div class="form-group col-md-5 ">
                <label for="roomStylesId" class="col-sm-4 control-label">房间类型:</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="roomStylesId" name="roomStylesId" placeholder="roomStylesId" >

                    </select>
                </div>
            </div>
            <div class="form-group col-md-5 ">
                <label for="position" class="col-sm-4 control-label">方位:</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="position" name="position" placeholder="方位" maxlength="30">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5 ">
                <label for="num" class="col-sm-4 control-label">房号:</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="num" name="num" placeholder="房号" maxlength="30">
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="area" class="col-sm-4 control-label">面积/m²:</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="area"name="area" placeholder="面积" maxlength="30">
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="charge" class="col-sm-4 control-label">价钱(元):</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="charge" name="charge" placeholder="价钱" maxlength="30">
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $(function () {
        $.get("${ctx}/roomStyles/getRoomStylesList?storeId="+'<%=session.getAttribute("storeId")%>').done(function(data){
            for(var i=0;i<data.length;i++){
                $("#roomStylesId").append("<option value='"+data[i].id+"'>"+data[i].roomStyle+"</option>");
            }
        });

    });
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>
</body>
</html>
