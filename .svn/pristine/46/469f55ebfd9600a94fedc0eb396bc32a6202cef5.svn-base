<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${ctx}/static/template/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="phoform" >
    <div class="form-group required" hidden="hidden">
    <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
    <div class="col-sm-9">
        <input type="text" class="form-control" id="id" name="id" placeholder="id" >
    </div>
</div>
    <div class="container">
        <div class="row">
            <!--前缀-->
            <div class="form-group col-md-5 ">
                <label for="name" class="col-sm-4 control-label">来电人姓名：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="name" name="name" placeholder="来电人姓名">
                </div>
            </div>
            <div class="form-group col-md-5 ">
                <label for="tell" class="col-sm-4 control-label">电话：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="tell" name="tell" placeholder="电话">
                </div>
            </div>
        </div>
   <div class="row">
            <div class="form-group col-md-5 col-lg-offset-1">
                <label for="isRegistration" class="col-sm-4 control-label">追踪：</label>
                <div class="col-sm-5">
                    <select  type="text" class="form-control" id="isRegistration" name="isRegistration"   tabindex="1">
                        <option value="是">是</option>
                        <option value="否">否</option>
                    </select>
                </div>
            </div>
           <div class="form-group col-md-5 ">
               <label for="personnel" class="col-sm-4 control-label">追踪人：</label>
               <div class="col-sm-5">
                   <input type="text" class="form-control" id="personnel" name="personnel" placeholder="追踪人">
               </div>
           </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5 col-lg-offset-1">
                <label for="times" class="col-sm-4 control-label">沟通次数：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="times" name="times" placeholder="沟通次数">
                </div>
            </div>
          <div class="form-group col-md-5">
                <label for="callcontent" class="col-sm-4 control-label">沟通内容：</label>
                <div class="col-sm-5">
                    <textarea rows="5" cols="20" id="callcontent" name="callcontent" ></textarea>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>
</body>
</html>
