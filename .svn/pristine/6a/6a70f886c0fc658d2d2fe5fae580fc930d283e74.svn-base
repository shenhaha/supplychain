<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${ctx}/static/template/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id" placeholder="id" >
        </div>
    </div>

    <div class="container">
        <%--<div class="row">
            <!--前缀-->
            <div class="form-group col-md-5 ">
                <label for="mothername" class="col-sm-3 control-label">宝妈姓名：</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="mothername" name="mothername" placeholder="宝妈姓名">
                </div>
            </div>

            <div class="form-group col-md-5 ">
                <label for="babyname" class="col-sm-3 control-label">宝宝姓名：</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="babyname" name="babyname" placeholder="宝宝姓名">
                </div>
            </div>
        </div>--%>

        <div class="row">
            <!--前缀-->
            <div class="form-group col-md-5 ">
                <label for="washdate" class="col-sm-3 control-label">洗澡时间</label>
                <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-sm-7" data-date="" data-date-format="yyyy-mm-dd hh:ii:ss" data-link-field="dtp_input1">
                    <input class="form-control" size="16" type="text" value="" name="washdate" id="washdate" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
                <input type="hidden" id="dtp_input1" value="" /><br/>
            </div>
            <div class="form-group col-md-5 ">
                <label for="note" class="col-sm-3 control-label">备注</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="note" name="note" placeholder="备注" tabindex="1">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5 ">
                <label for="babyname" class="col-sm-3 control-label">宝宝选择</label>
                <div class="col-sm-7">
                    <select id="babyname" class="form-control">

                    </select>
                </div>
            </div>
        </div>

    </div>
</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>
</body>
</html>