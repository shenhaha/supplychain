<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id">
        </div>
    </div>
    <div class="container">
        <div class="row">
            <!--前缀-->
            <div class="form-group col-md-5">
                <label for="storeFileId" class="col-sm-4 control-label">店铺名称：</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="storeFileId" name="storeFileId">
                    </select>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="department" class="col-sm-4 control-label">所属部门：</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="department" name="department">
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5 col-lg-offset-1">
                <label for="meetingtime" class="col-md-4 control-label">会议时间：</label>
                <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-md-7 "
                     data-date="" data-date-format="yyyy-mm-dd hh:ii:ss">

                    <input class="form-control" size="16" type="text" value="" name="meetingtime" id="meetingtime"
                           readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="place" class="col-sm-4 control-label">会议地点：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="place" name="place">
                </div>
            </div>

        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="attendees" class="col-sm-4 control-label">出席人员：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="attendees" name="attendees">
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="absencepersonnel" class="col-sm-4 control-label">缺席人员：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="absencepersonnel" name="absencepersonnel">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="host" class="col-sm-4 control-label">主持人：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="host" name="host">
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="recorder" class="col-sm-4 control-label">记录人：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="recorder" name="recorder">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="meetingcontent" class="col-sm-4 control-label">会议内容：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="meetingcontent" name="meetingcontent">
                </div>
            </div>
            <div class="form-group col-md-5 col-lg-offset-1">
                <label for="endtime" class="col-md-4 control-label">结束时间：</label>
                <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-md-7 "
                     data-date="" data-date-format="yyyy-mm-dd hh:ii:ss">

                    <input class="form-control" size="16" type="text" value="" name="endtime" id="endtime" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="signature" class="col-sm-4 control-label">阅后签名：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="signature" name="signature">
                </div>
            </div>
            <div class="form-group col-md-5 col-lg-offset-1">
                <label for="nexttime" class="col-md-4 control-label">下期时间：</label>
                <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-md-7 "
                     data-date="" data-date-format="yyyy-mm-dd hh:ii:ss">

                    <input class="form-control" size="16" type="text" value="" name="nexttime" id="nexttime" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="note" class="col-sm-4 control-label">备注：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="note" name="note">
                </div>
            </div>
        </div>


    </div>
</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });

    $(function () {
        //动态查询店铺信息
        $.ajax({
            url:"${ctx}/storeFile/selectStoreFiles",
            type:"post",
            success:function(data){
                for(var i=0;i<data.length;i++){
                    $("#storeFileId").append("<option value='"+data[i].id+"'>"+data[i].name+"</option>");
                }
            }
        });
        //动态查询部门信息
        $.ajax({
            url:"${ctx}/accessDepartment/selectDepartmentAll",
            type:"post",
            success:function(data){
                for(var i=0;i<data.length;i++){
                    $("#department").append("<option value='"+data[i].name+"'>"+data[i].name+"</option>");
                }
            }
        });
    });
</script>
</body>
</html>
