<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${ctx}/static/template/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group col-md-5" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-md-5">
            <input type="text" class="form-control" id="id" name="id" placeholder="id">
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="form-group col-md-5">
                <label for="supplierName" class="col-md-4 control-label">供应商名称</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="supplierName" name="supplierName"
                           placeholder="supplierName" >
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="brand" class="col-md-4 control-label">品牌</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="brand" name="brand" placeholder="brand" >
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label class="col-md-4 control-label">类型</label>
                <div class="col-md-5">
                    <select type="text" class="form-control" id="nature" name="nature" placeholder="nature"
                            tabindex="1">
                        <option value="个人">个人</option>
                        <option value="团体">团体</option>
                        <option value="工商">工商</option>
                    </select>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="address" class="col-md-4 control-label">地址</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="address" name="address" placeholder="address" >
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="leadName" class="col-md-4 control-label">联系人</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="leadName" name="leadName" placeholder="leadName">
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="tell" class="col-md-4 control-label">联系电话</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="tell" name="tell" placeholder="tell">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="remark" class="col-md-4 control-label">备注</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="remark" name="remark" placeholder="remark" >
                </div>
            </div>
        </div>

    </div>

</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>
</body>
</html>
