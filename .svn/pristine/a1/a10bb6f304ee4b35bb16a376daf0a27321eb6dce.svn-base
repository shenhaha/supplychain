package com.luer.storesdata.controller;

import com.luer.storesdata.bean.RoomStyles;
import com.luer.storesdata.service.RoomStylesService;
import lombok.NonNull;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import java.util.List;


/**
 * Created by 87961 on 2018/8/29.
 */
@Controller
@RequestMapping("/roomStyles")
public class RoomStylesController {
    @Autowired
    private RoomStylesService roomStylesService;

    @RequestMapping("/addRoomStyles")
    public void addRoomStyles(@NonNull RoomStyles roomStyles){
        roomStylesService.addRoomStyles(roomStyles);
    }
    @RequestMapping("/updateRoomStyles")
    public void updateRoomStyles(@NonNull RoomStyles roomStyles){
        roomStylesService.updateRoomStyles(roomStyles);
    }
    @RequestMapping("/deleteRoomStyles")
    public void deleteRoomStyles(@NonNull String id){
        roomStylesService.deleteRoomStyles(id);
    }
    @RequestMapping("/getRoomStyles")
    @ResponseBody
    public List<RoomStyles> getRoomStyles(){
        List<RoomStyles> roomStylesList=roomStylesService.getRoomStyles();
        return roomStylesList;
    }
    @RequestMapping("/getRoomStylesList")
    @ResponseBody
    public List<RoomStyles> getRoomStylesList(@NonNull String storeId){
        List<RoomStyles> roomStylesList=roomStylesService.getRoomStylesList(storeId);


        return roomStylesList;
    }

}
