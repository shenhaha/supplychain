<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>每日签单数量对比表</title>
    <!-- 引入 echarts.js -->
    <script src="${ctx}/static/js/echarts.js"></script>
</head>
<body>
<div class="form-group col-md-4" style="margin-top: 10px">
    <label for="assessmentTime" class="col-sm-4 control-label">选择时间</label>
    <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime1 col-sm-8"
         data-date="" data-date-format="yyyy-mm-dd" data-link-field="dtp_input1">
        <input class="form-control" size="16" type="text" value="" name="assessmentTime" id="assessmentTime"
               readonly>
        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
    </div>
</div>
<!-- 为ECharts准备一个具备大小（宽高）的Dom -->
<div id="main" style="width: 600px;height:400px;"></div>
<script type="text/javascript">
    $('.form_datetime1').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 3,
        minView:2,
        forceParse: 0,
        showMeridian: 1,
    });
    var a = new Date();
    var y = a.getFullYear();
    var m = a.getMonth()+1;
    var d = a.getDate();
    if(m!="10"&&m!="11"&&m!="12"){
        var m = "0"+m;
    }
    $('#assessmentTime').val(y+"-"+m+"-"+d);
    // 基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('main'));

    // 指定图表的配置项和数据
    var option = {
        title: {
            text: '2018年10月',
            x:'center',
        },
        tooltip: {},
        //     legend: {
        //         data:['销量']
        //     },
        xAxis: {
            data: ["博雅","上海","浙联","吴江","海宁","上虞","桐乡","平湖"]
        },
        yAxis: {},
        series: [{
            //       name: '销量',
            type: 'bar',
            data: null,
            itemStyle: {
                normal: {
                    label: {
                        show: true, //开启显示
                        position: 'top', //在上方显示
                        textStyle: { //数值样式
                            color: 'black',
                            fontSize: 16

                        }
                    }
                }
            },
        }]
    };

    // 使用刚指定的配置项和数据显示图表。
    $(function () {
        option.title.text = $('#assessmentTime').val()+'日签单数量对比表';
        $.ajax({
            url: '${ctx}/businessmanager/getSignatureNumberDay',
            data:{time:$('#assessmentTime').val()},
            async:false,
            success:function (data) {
                option.series[0].data = data.counts;
                option.xAxis.data = data.names
            }
        })
        myChart.setOption(option);
        $('#assessmentTime').change(function () {
        $.ajax({
            url: '${ctx}/businessmanager/getSignatureNumberDay',
            data:{time:$('#assessmentTime').val()},
            async:false,
            success:function (data) {
                option.title.text = $('#assessmentTime').val()+'日签单数量对比表';
                option.series[0].data = data.counts;
                option.xAxis.data = data.names
            }
        })
        myChart.setOption(option);
        })
    })
</script>
</body>
</html>
