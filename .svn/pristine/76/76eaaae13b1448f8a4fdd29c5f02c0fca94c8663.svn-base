<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
	<link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
	<link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
	<!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
	<script src="${ctx}/static/template/bootstrap.min.js"></script>
	<script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
	<%--日期时间插件--%>
	<script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
	<script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="sendform" >
	<div class="form-group required" hidden="hidden">
		<label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
		<div class="col-sm-9">
			<input type="text" class="form-control" id="id" name="id" placeholder="id" >
		</div>
	</div>
	<div class="container">
		<div class="row">
			<!--前缀-->
			<div class="form-group col-md-5 ">
				<label for="name" class="col-sm-4 control-label">司机姓名：</label>
				<div class="col-sm-5">
					<input type="text" class="form-control" id="name" name="name" placeholder="司机姓名">
				</div>
			</div>
			<div class="form-group col-md-5 ">
				<label for="department" class="col-sm-4 control-label">用车部门：</label>
				<div class="col-sm-5">
                    <select type="text" class="form-control" id="department" name="department" placeholder="用车部门" tabindex="1">

                    </select>
				</div>
			</div>
		</div>
		<div class="row">
			<!--前缀-->

			<div class="form-group col-md-5">
				<label for="startTime" class="col-sm-4 control-label">发车时间：</label>
				<div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-md-7 " data-date="" data-date-format="yyyy-mm-dd hh:ii:ss">

					<input class="form-control" size="16" type="text" value="" name="startTime" id="startTime" placeholder="发车时间" readonly>
					<span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
				</div>
			</div>
			<div class="form-group col-md-5">
				<label for="time" class="col-sm-4 control-label">制单时间：</label>
				<div style="padding-left: 7.5px;padding-right: 25.0px" class="input-group date form_datetime col-md-7 " data-date="" data-date-format="yyyy-mm-dd hh:ii:ss">

					<input class="form-control" size="16" type="text" value="" name="time" id="time" placeholder="制单时间" readonly>
					<span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
				</div>
			</div>

		</div>


		<div class="row">

			<div class="form-group col-md-5">

				<label for="passenger" class="col-sm-4 control-label">乘车人员：</label>
				<div class="col-sm-5">
					<input type="text" class="form-control" id="passenger" name="passenger" placeholder="乘车人员">
				</div>
				</div>
			<div class="form-group col-md-5 ">
				<label for="route" class="col-sm-4 control-label">目的地：</label>
				<div class="col-sm-5">
					<input type="text" class="form-control" id="route" name="route" placeholder="目的地">
				</div>
			</div>

		</div>


		<div class="row">
			<div class="form-group col-md-5 col-lg-offset-1">
				<label for="originator" class="col-sm-4 control-label">制单人：</label>
				<div class="col-sm-5">
					<input type="text" class="form-control" id="originator" name="originator" placeholder="制单人">
				</div>
			</div>
			<div class="form-group col-md-5 ">
				<label for="remark" class="col-sm-4 control-label">备注：</label>
				<div class="col-sm-5">
					<input type="text" class="form-control" id="remark" name="remark" placeholder="备注">
				</div>
			</div>

		</div>

	</div>
</form>
<script>
    $(function () {
        $.get("${ctx}/accessDepartment/getDepartments?storeId="+'<%=session.getAttribute("storeId")%>').done(function(data){
            for(var i=0;i<data.length;i++){
                $("#department").append("<option value='"+data[i].name+"'>"+data[i].name+"</option>");
            }
        });
    });
	$('.form_datetime').datetimepicker({
		language: 'zh-CN',
		weekStart: 1,
		todayBtn: 1,
		autoclose: 1,
		todayHighlight: 1,
		startView: 2,
		forceParse: 0,
		showMeridian: 1
	});
</script>
</body>
</html>
