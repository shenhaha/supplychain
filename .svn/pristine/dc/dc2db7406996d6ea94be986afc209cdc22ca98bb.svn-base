<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id">
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="form-group col-md-5">
                <label for="name" class="col-sm-4 control-label">姓名：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="name" name="name">
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="sex" class="col-sm-4 control-label">性别：</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="sex" name="sex"
                            tabindex="1">
                        <option value="男">男</option>
                        <option value="女">女</option>
                    </select>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="position" class="col-sm-4 control-label">职位：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="position" name="position">
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="temperature" class="col-sm-4 control-label">体温：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="temperature" name="temperature">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="cough" class="col-sm-4 control-label">咳嗽：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="cough" name="cough">
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="excepted" class="col-sm-4 control-label">异常情况：</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="excepted" name="excepted">
                </div>
            </div>
        </div>


    </div>
</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });

    $(function () {
        //动态查询店铺信息
        $.ajax({
            url:"${ctx}/storeFile/selectStoreFiles",
            type:"post",
            success:function(data){
                for(var i=0;i<data.length;i++){
                    $("#storeFileId").append("<option value='"+data[i].id+"'>"+data[i].name+"</option>");
                }
            }
        });
        //动态查询部门信息
        $.ajax({
            url:"${ctx}/accessDepartment/selectDepartmentAll",
            type:"post",
            success:function(data){
                for(var i=0;i<data.length;i++){
                    $("#department").append("<option value='"+data[i].name+"'>"+data[i].name+"</option>");
                }
            }
        });
    });
</script>
</body>
</html>
