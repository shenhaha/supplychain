<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${ctx}/static/template/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group col-md-5" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-md-5">
            <input type="text" class="form-control" id="id" name="id" placeholder="id">
        </div>
    </div>
    <div class="container">
        <div class="row">

            <div class="form-group col-sm-5" hidden="hidden">
                <label for="goodsId" class="col-sm-4 control-label">商品名称</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="goodsId" name="goodsId" placeholder="goodsId" >

                    </select>

                </div>
            </div>
            <div class="form-group col-sm-5" >
                <label for="stockWarn" class="col-sm-4 control-label">最小安全值</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="stockWarn" name="stockWarn" placeholder="stockWarn" >
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-sm-5" hidden="hidden">
                <label for="stockNum" class="col-sm-4 control-label">入库数量</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="purchaseNum"   name="purchaseNum"    placeholder="purchaseNum" >
                </div>
            </div>
            <div class="form-group col-sm-5" hidden="hidden">
                <label for="shipmentsNum" class="col-sm-4 control-label">出库数量</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="shipmentsNum"   name="shipmentsNum"  placeholder="shipmentsNum" >
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-5" hidden="hidden">
                    <label for="stockNum" class="col-sm-4 control-label">库存数量</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="stockNum"  name="stockNum" placeholder="stockNum" >
                    </div>
                </div>
                <div class="form-group col-sm-5" hidden="hidden">
                    <label for="remark" class="col-sm-4 control-label">备注</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="remark"  name="remark" placeholder="remark">
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>
</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });


    $(function () {
        //动态查询商品信息
        $.ajax({
            url:"${ctx}/goods/selectStoreGoods",
            type:"post",
            success:function(data){
                for(var i=0;i<data.length;i++){
                    $("#goodsId").append("<option  value='"+data[i].id+"'>"+data[i].goodsName+"</option>");
                }
            }
        });

    });

</script>
</body>
</html>
