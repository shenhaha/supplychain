<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal"role="form" id="myform">
    <div class="form-group required" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="id" name="id" placeholder="id" >
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="form-group col-md-5">
                <label for="name" class="col-sm-3 control-label">宝妈姓名：</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="name" name="name" placeholder="宝妈姓名">
                </div>
            </div>

            <div class="form-group col-md-5">
                <label for="bornStyle" class="col-sm-3 control-label">生产方式：</label>
                <div class="col-sm-7">
                    <select id="bornStyle" class="form-control">
                        <option value="顺产">顺产</option>
                        <option value="剖腹产">剖腹产</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-5">
                <label for="birthDate" class="col-sm-3 control-label">出生日期：</label>
                <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-sm-7" data-date="" data-date-format="yyyy-mm-dd hh:ii:ss" data-link-field="dtp_input1">
                    <input class="form-control" size="16" type="text" value="" name="birthDate" id="birthDate" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
            </div>

            <div class="form-group col-md-5">
                <label for="bornHospital" class="col-sm-3 control-label">入住医院：</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="bornHospital" name="bornHospital" placeholder="入住医院">
                </div>
            </div>
        </div>

       <%-- <div class="row">
            <div class="form-group col-md-5">
                <label for="height" class="col-sm-3 control-label">身高(cm)：</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="height" name="height" placeholder="身高">
                </div>
            </div>

            <div class="form-group col-md-5">
                <label for="weight" class="col-sm-3 control-label">体重(kg)：</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="weight" name="weight" placeholder="体重">
                </div>
            </div>
        </div>--%>

        <div class="row">
            <div class="form-group col-md-5">
                <label for="contact" class="col-sm-3 control-label">联系方式：</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="contact" name="contact" placeholder="联系方式">
                </div>
            </div>
            <div class="form-group col-md-5" id="status">
                <label for="check_status" class="col-sm-3 control-label">入住状态：</label>
                <div class="col-sm-7">
                    <select id="check_status" class="form-control">
                        <option value="1">在馆</option>
                        <option value="2">离馆</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>
</body>
</html>
