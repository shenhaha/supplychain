<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<html>
<head>
    <link rel="stylesheet" href="${ctx}/static/template/bootstrap.min.css">
    <link rel="stylesheet" href="${ctx}/static/css/bootstrapValidator.css"/>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${ctx}/static/template/bootstrap.min.js"></script>
    <script type="text/javascript" src="${ctx}/static/js/bootstrapValidator.js"></script>
    <%--日期时间插件--%>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.js"></script>
    <script src="${ctx}/static/js/bootstrap-datetimepicker.zh-CN.js"></script>
</head>
<body>
<form class="form-horizontal" role="form" id="myform">
    <div class="form-group col-md-5" hidden="hidden">
        <label for="id" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">ID</label>
        <div class="col-md-5">
            <input type="text" class="form-control" id="id" name="id" placeholder="id">
        </div>
    </div>
    <div class="form-group col-md-5" hidden="hidden">
        <label for="type" class="col-sm-2 control-label" style="margin: 0 0;padding: 0 0">类型</label>
        <div class="col-md-5">
            <select type="text" class="form-control" id="type"
                    name="type" placeholder="type" tabindex="0">
                <option value="0" selected="selected">总采订单</option>
            </select>
        </div>
    </div>
    <div class="container">
        <div class="form-group col-md-5" hidden="hidden">
            <label for="supplierId"
                   class="col-md-4 control-label">供应商名称</label>
            <div class="col-md-5">
                <input type="text" class="form-control" readonly="readonly" id="supplierId" placeholder="总部">

            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-5">
                <label for="employerId" class="col-sm-4 control-label">员工姓名</label>
                <div class="col-sm-5">
                    <select type="text" class="form-control" id="employerId" name="employerId"      placeholder="employerId">
                    </select>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="status" class="col-md-4 control-label">订单状态</label>
                <div class="col-md-5">
                    <select type="text" class="form-control" id="status" name="status" placeholder="status"
                            tabindex="1">
                        <option value="0">预定</option>
                        <option value="1">下单</option>
                        <option value="2">入库</option>
                    </select>

                </div>
            </div>
        </div>
        <div class="row">

            <div class="form-group col-md-5">
                <label for="tell" class="col-md-4 control-label">联系方式</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="tell" name="tell" placeholder="联系方式">
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="remark" class="col-md-4 control-label">备注</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="remark" name="remark" placeholder="备注">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-5">
                <label for="ordertime" class="col-md-4 control-label">下单时间</label>
                <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-md-5"
                     data-date="" data-date-format="yyyy-mm-dd hh:ii:ss" data-link-field="dtp_input1">
                    <input class="form-control" size="16" type="text" value="" name="ordertime" id="ordertime" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="applicationtime" class="col-md-4 control-label">申请时间</label>
                <div style="padding-left: 7.5px;padding-right: 7.5px" class="input-group date form_datetime col-md-5"
                     data-date="" data-date-format="yyyy-mm-dd hh:ii:ss" data-link-field="dtp_input1">
                    <input class="form-control" size="16" type="text" value="" name="applicationtime"
                           id="applicationtime" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
            </div>


        </div>
        <div class="row">

            <div class="form-group col-md-5" hidden="hidden">
                <label for="sumprice" readonly="readonly" class="col-md-4 control-label">总价</label>
                <div class="col-md-5">
                    <input type="text" readonly class="form-control" id="sumprice" name="sumprice" placeholder="0">
                </div>
            </div>


        </div>

    </div>
</form>
<script>
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });


    $(function () {
        //动态查询员工信息
        $.ajax({
            url: "${ctx}/employer/selectEmployersByStoreId",
            type: "post",
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    $("#employerId").append("<option  value='" + data[i].id + "'>" + data[i].name + "</option>");
                }
            }
        });

    });
</script>
</body>
</html>
