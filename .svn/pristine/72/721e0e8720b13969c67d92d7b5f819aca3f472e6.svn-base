<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<html>
<head>
    <title>商品详情</title>
</head>
<body>
<input style="display: none" type="hidden" id="storeId" value="${storeId}">
<!-- Main Content -->
<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Row -->
        <div class="row">
            <div class="col-sm-12">
                <%--<div class="panel-heading">
                    <div class="pull-left">
                        <ol class="breadcrumb">
                            <li><a href="${ctx}/index">首页</a></li>
                            <li class="active">领用出库详情页面</li>
                        </ol>
                    </div>
                    <div class="clearfix"></div>
                </div>--%>
                <div>
                    <div class="panel-body">
                        <div class="table-wrap">
                            <table id="orderdetails" class="table" data-paging="true" data-filtering="true"
                                   data-sorting="true">
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Row -->

    </div>
</div>


<script>
    $(function () {
        var orderdetailsTitle = [
            {"name": "id", "title": "ID", "breakpoints": "xs sm", "visible": false},
            {"name": "goodsId", "title": "商品id", "visible": false},
            {"name": "goodsName", "title": "商品名称"},
            {"name": "serialnum", "title": "商品编号"},
            {"name": "goodsNum", "title": "数量"},
            {"name": "price", "title": "单价"},
            {"name": "orderId", "title": "订单id", "visible": false},
            {"name": "detailstype", "title": "详情类别", "visible": false}
        ];

        //启动footable
        var ft = FooTable.init('#orderdetails', {
            "columns": orderdetailsTitle,
            "rows": $.get("${ctx}/orderdetails/selectByOrderId?orderId=<%=request.getParameter("orderId")%>"),

            //功能操作

            editing: {
                enabled: true,
                addRow: function(){
                    //新增模态框
                    var $that = $(this);
                    var dialog = BootstrapDialog.show({
                        type : BootstrapDialog.TYPE_DEFAULT,
                        title : "<span style=\"color:#ab8ce4\">新增一条数据</span>",
                        closable: false,
                        draggable: true,
                        cssClass: 'api-blacklist-form-add',
                        message:$('<div></div>').load('${ctx}/template/storesandsales/shipmentsdetailslist.jsp'),//加载弹出页面
                        size : BootstrapDialog.SIZE_WIDE,//弹出框大小。
                        onhide:function(){
                            $that.removeAttr("disabled");
                        },
                        buttons : [{
                            id: 'btn-form-submit',
                            label: '提交',
                            icon: 'fa fa-check-circle',
                            cssClass: 'btn-primary',
                            action: function(){
                                var json = {

                                    'goodsId': $('#goodsId').val(),

                                    'goodsNum': $('#goodsNum').val(),

                                    'orderId': "<%=request.getParameter("orderId")%>",

                                    'detailstype':<%=request.getParameter("detailstype")%>
                                };

                                $("#myform").bootstrapValidator({
                                    live: 'disabled',//验证时机，enabled是内容有变化就验证（默认），disabled和submitted是提交再验证
                                    excluded: [':disabled', ':hidden', ':not(:visible)'],//排除无需验证的控件，比如被禁用的或者被隐藏的
                                    submitButtons: '#btn-test',//指定提交按钮，如果验证失败则变成disabled，但我没试成功，反而加了这句话非submit按钮也会提交到action指定页面
                                    message: '通用的验证失败消息',//好像从来没出现过
                                    feedbackIcons: {//根据验证结果显示的各种图标
                                        valid: 'glyphicon glyphicon-ok',
                                        invalid: 'glyphicon glyphicon-remove',
                                        validating: 'glyphicon glyphicon-refresh'
                                    },
                                    fields: {
                                        goodsId: {
                                            validators: {
                                                notEmpty: {
                                                    message: '商品名称不能为空'
                                                },
                                            }

                                        },

                                        goodsNum: {
                                            validators: {
                                                notEmpty: {
                                                    message: '商品数量不能为空！'
                                                },
                                            }
                                        }
                                    }
                                });
                                var bootstrapValidator = $("#myform").data('bootstrapValidator');
                                bootstrapValidator.validate();
                                if (bootstrapValidator.isValid()) {
                                    $.post("${ctx}/orderdetails/insertOrderDetails",json).
                                    done(function(data){getCode(data)}).
                                    fail(function(data){getCode(data)});
                                }}
                        },{
                            label : '关闭',
                            icon: 'fa fa-close',
                            action : function(dialogItself) {
                                dialogItself.close();
                            }
                        } ]
                    });
                },
                //这里是修改时绑定数据
                editRow: function(row){
                    var values = row.val();
                    var $that = $(this);
                    //失效
                    $that.attr("disabled","disabled");
                    // 调用add方法
                    var dialog = BootstrapDialog.show({
                        type : BootstrapDialog.TYPE_DEFAULT,
                        title : "<span style=\"color:#ab8ce4\">修改一条数据</span>",
                        closable: false,
                        draggable: true,
                        cssClass: 'api-blacklist-form-add',
                        message:$('<div></div>').load('${ctx}/template/storesandsales/shipmentsdetailslist.jsp'),//加载弹出页面
                        size : BootstrapDialog.SIZE_WIDE,//弹出框大小。
                        //数据回显
                        onshown: function(dialogRef){
                            $('#id').val(values.id);
                            $('#goodsId').val(values.goodsId);
                            $('#serialnum').val(values.serialnum);
                            $('#goodsNum').val(values.goodsNum);
                            $('#price').val(values.price);
                            $('#orderId').val(values.orderId);
                            $('#detailstype').val(values.detailstype);
                        },
                        buttons : [{
                            id: 'btn-form-submit',
                            label: '提交',
                            icon: 'fa fa-check-circle',
                            cssClass: 'btn-primary',
                            action: function(){
                                var json = {
                                    'id': $('#id').val(),
                                    'goodsId': $('#goodsId').val(),
                                    'serialnum': $('#serialnum').val(),
                                    'goodsNum': $('#goodsNum').val(),
                                    'price': $('#price').val(),
                                    'orderId': "<%=request.getParameter("orderId")%>",
                                    'detailstype':<%=request.getParameter("detailstype")%>
                                };
                                $.post("${ctx}/orderdetails/updateOrderDetails",json).
                                done(function(data){getCode(data)}).
                                fail(function(data){getCode(data)});
                            }
                        },{
                            label : '关闭',
                            icon: 'fa fa-close',
                            action : function(dialogItself) {
                                dialogItself.close();
                            }
                        } ]
                    });
                },
                //删除操作
                deleteRow: function(row){
                    myConfirm("${ctx}/orderdetails/deleteOrderDetails",row);
                }
            }
        });
        uid = 10;
    });


</script>
</body>
</html>
