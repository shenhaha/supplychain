<script >

    $(function () {

        function detail(id) {
            window.location.href = "${ctx}/checkInDeatil?motherid="+id;
        }
        window.detail = detail;
        var guestTitle = [
            {"name":"motherid","visible":false},
            {"name":"name","title":"妈妈姓名"},
            {"name": "roomnumber","title":"房间号"},
            {"name":"options","title":"操作"}
        ];
        //启动footable
        var ft=FooTable.init('#guestlists',{
            "columns": guestTitle,
            "rows": $.get("${ctx}/checkIn/selectMotherCheckIn?storeId="+"<%=session.getAttribute("storeId")%>",function (data) {
                $(data).each(function () {
                    this.options = "<button class='btn btn-primary btn-sm' onclick='detail("+'"'+this.motherid+'"'+")'>查看详细</button>";
                })
            }),
            //功能操作
            editing: {
                enabled: false,
                //这里是修改时绑定数据
                editRow: function(row){
                    var values = row.val();
                    window.location.href = "${ctx}/checkInDeatil?motherid="+values.motherid;
                }
            }
        });
    });
</script>
