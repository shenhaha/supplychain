    @Override
    public List<Nursingeducation> getNursingEducation(Nursingeducation nursingeducation) {
        NursingeducationExample nursingeducationExample = new NursingeducationExample();
        NursingeducationExample.Criteria criteria = nursingeducationExample.createCriteria();
        if (nursingeducation.getStoreId() != null) {
            criteria.andStoreIdLike(nursingeducation.getStoreId());
        }
        List<Nursingeducation> list = nursingeducationMapper.selectByExample(nursingeducationExample);
        return list;
    }

    @Override
    public int updateNursingEducation(Nursingeducation nursingeducation) {
        NursingeducationExample nursingeducationExample = new NursingeducationExample();
        NursingeducationExample.Criteria criteria = nursingeducationExample.createCriteria();
        criteria.andIdLike(nursingeducation.getId());
        int i = nursingeducationMapper.updateByExampleSelective(nursingeducation, nursingeducationExample);
        return i;
    }

    @Override
    public int deleteNursingEducation(String id) {
        int i = nursingeducationMapper.deleteByPrimaryKey(id);
        return i;
    }

    @Override
    public int insertNursingEducation(Nursingeducation nursingeducation) {
        nursingeducation.setId(UUIDUtils.getUUID());
        int i = nursingeducationMapper.insertSelective(nursingeducation);
        return i;
    }

    @Override
    public List<Nursingeducation> getEducationByMotherId(String customerBasicId) {
        List<Nursingeducation> list = nursingeducationMapper.getEducationByMotherId(customerBasicId);

        return list;
    }

